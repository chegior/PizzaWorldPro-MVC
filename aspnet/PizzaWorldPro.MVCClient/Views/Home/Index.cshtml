@model PizzaWorldPro.Domain.Models.User;
@{
    ViewData["Title"] = "Home Page";

}
<div class="container-fluid">

<div id="carouselPizzaWorldPro" class="carousel slide carousel-fade" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
            <img class="d-block w-100" src="Images/hero1.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="Images/hero2.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="Images/hero3.jpg" alt="Third slide">
      </div>
    </div>
    <div class="carousel-caption">
        <div class="txtBanner">
            <div class="whoWeAre">
                <img src="Images/logo.png" alt="Logo PizzaWorld" width="150px">
                <h3>Pizza World Pro</h3>
            </div>
            <div class="whatWeDo">
                <h1>Making the best Pizzas in the tech World.</h1>
            </div>
           <br>
            <div class="text-center">
              <form class="form" method="post" asp-action="SaveUser" asp-controller="Home">
                <label for="Name">Please enter your Name:</label>
                <input asp-for="NameUser" name="UserNew" type="text">
                <button class="btn btn-warning" type="submit" id="SaveButton">Order Now</button>
              </form>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselPizzaWorldPro" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselPizzaWorldPro" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>



  </div>
</div>
